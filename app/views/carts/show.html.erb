<p id="notice"><%= notice %></p>

<div class="container">
    <div class="row">
            <section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card">
          <div class="card-body p-4">

            <div class="row">

              <div class="col-lg-7">
                <h5 class="mb-3">
                    <div class="text-body"><i
                      class="fas fa-long-arrow-alt-left me-2"></i>
                    <%= link_to "Continue shopping" ,products_path %>
                      </h5>
                <hr>

             <%= render @cart.line_items %>
                
                    <div class="mt-4 p-3 column d-flex justify-content-end border-1 border border-primary">
                        <div class="float-right">
                            Total: <%= number_to_currency(@cart.total_price) %>
                        </div>
                    </div>
              </div>
              <div class="col-lg-5">
                    <%= link_to "Empty Cart",@cart, method: :delete, data: {confirm: "Are you sure? "},class:"btn btn-danger"  %>
                </div>
                </section>
    </div>

</div>
