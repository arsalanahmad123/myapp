<%= form_for @category  do |f| %>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group mt-3 text-center">
            <%= f.submit class: 'btn btn-primary' %>
        </div>
<% end %>
