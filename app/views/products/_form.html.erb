<%= form_for @product, url: products_path, html: {multipart: true} do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :price %>
                <%= f.number_field :price, autocomplete: 'current-password', class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :category %>
                <%= f.collection_check_boxes :category_ids , Category.all, :id, :name do |cb| %>
                <% cb.label(class: "checkbox-inline input_checkbox form-control") {cb.check_box(class: "checkbox") + cb.text } %>
                <% end %>
            </div>
            <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :image , class:"form-control" %>
            </div>

            <div class="form-group mt-3 text-center">
                <%= f.submit class: 'btn btn-primary' %>
            </div>
            <% end %>
