<div class="container">
    <div class="row d-flex justify-content-center m-0">
        <h1 class="text-center">Edit Existing Product</h1>
        <div class="col-md-6 ">
         <%= form_for @product, url: product_path(@product), html: {multipart: true} do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :price %>
                <%= f.number_field :price, autocomplete: 'current-password', class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :image , class:"form-control" %>
            </div>

            <div class="form-group mt-3 text-center">
                <%= f.submit class: 'btn btn-primary' %>
            </div>
            <% end %>

        </div>
    </div>
</div>